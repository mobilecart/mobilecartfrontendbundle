{% extends frontend() %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Contact Us</h1>
                <div class="account-wall">
                    {#
                    <img class="profile-img" src="{{ asset('bundles/mobilecartfrontend/images/user-icon.svg') }}" alt="">
                    #}

                    {{ form_start(form, {'attr':{'class':'form-signin'}}) }}
                    {{ form_widget(form) }}

                    {% if user is not defined and recaptcha_key|length > 0 %}
                        <div class="form-group">
                            <label>Captcha</label>
                            <div class="g-recaptcha" data-sitekey="{{ recaptcha_key }}"></div>
                        </div>
                    {% endif %}

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Send Message</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {% if user is not defined and recaptcha_key|length > 0 %}
        <script src='https://www.google.com/recaptcha/api.js'></script>
    {% endif %}

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/mobilecartfrontend/css/login.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}