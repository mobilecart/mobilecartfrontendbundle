{% extends frontend() %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block content %}

    <div class="container">
        <div class="row">
            {{ form_start(form) }}

            {% if form_sections is defined %}
                {% for section, sectionData in form_sections %}
                    <div id="section-{{ section }}" class="">
                        <div class="panel panel-default">
                            {% if sectionData.label|length > 0 %}
                            <div class="panel-heading">
                                <h2 class="panel-title">{{ sectionData.label }}</h2>
                            </div>
                            {% endif %}
                            <div class="panel-body">
                                {% for field in sectionData.fields %}
                                    {{ form_row(form.offsetGet(field)) }}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

                <div class="form-actions">
                    <input type="submit" class="btn btn-success pull-right" value="Register">
                </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
