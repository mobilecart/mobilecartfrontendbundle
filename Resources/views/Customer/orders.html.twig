{% extends frontend() %}

{% block sidebar %}
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <nav role="navigation" class="navbar-default navbar-static-side ">
                <div class="sidebar-collapse">
                    <ul class="side-menu nav">
                        {% for nav in navigation %}
                            <li>
                                <a href="{{ nav.url }}">{{ nav.label }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>
        </div>
{% endblock %}
{% block content %}
        <div class="col-sm-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Customer Orders</h2>
                </div>
                <div class="panel-body">

                    {% if orders|length > 0 %}
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Total</th>
                        </tr>
                        {% for order in orders %}
                        <tr>
                            <td>
                                <a href="{{ path('customer_order', {'id': order.id}) }}">{{ order.referencenbr }}</a>
                            </td>
                            <td>{{ order.status }}</td>
                            <td>{{ order.createdat|date('m/d/Y') }}</td>
                            <td>{{ decorate(order.basetotal) }}</td>
                        </tr>
                        {% endfor %}
                    </table>
                    {% else %}
                    <p>No Orders in History</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
