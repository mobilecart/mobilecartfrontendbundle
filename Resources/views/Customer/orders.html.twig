{% extends templatePath('Customer:dashboard.html.twig', 'frontend') %}
{% block main_content %}
    <div class="col-sm-9">

        <div class="row">
            <div class="col-xs-12">
                <h1 class="page-header">{% block header_text %}My Orders{% endblock %}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 header-buttons">
                <a href="{{ path('customer_profile') }}" class="btn btn-default">Back</a>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">

                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                    </tr>
                    {% if orders|length > 0 %}
                        {% for order in orders %}
                            <tr>
                                <td>
                                    <a href="{{ path('customer_order', {'id': order.id}) }}">{{ order.referencenbr }}</a>
                                </td>
                                <td>{{ order.status }}</td>
                                <td>{{ order.createdat|date('m/d/Y') }}</td>
                                <td>{{ decorate(order.basetotal) }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="4">No Orders Found</td>
                    </tr>
                    {% endif %}
                </table>

            </div>
        </div>
    </div>
{% endblock %}
