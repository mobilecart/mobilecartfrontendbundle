{% extends frontend() %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Update Password</h1>
                <div class="account-wall">

                    <img class="profile-img" src="{{ asset('bundles/mobilecartfrontend/images/user-icon.svg') }}" alt="">

                    {{ form_start(form, {'attr':{'class':'form-signin'}}) }}
                    {{ form_widget(form) }}
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    {{ form_end(form) }}
                </div>
                <a href="{{ path('login_route') }}" class="text-center new-account">Login</a>
            </div>
        </div>
    </div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/mobilecartfrontend/css/login.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
