{% extends frontend() %}
{% block sidebar %}
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <nav role="navigation" class="navbar-default navbar-static-side ">
                <div class="sidebar-collapse">
                    <ul class="side-menu nav">
                        {% for nav in navigation %}
                            <li>
                                <a href="{{ nav.url }}">{{ nav.label }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>
        </div>
{% endblock %}
{% block content %}
        <div class="col-sm-9 form-group">
            <h1>Order# {{ order.referencenbr }}</h1>
            {% if order.shipments|length > 0 %}
                <div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Shipments</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Address</th>
                                    <th>Service</th>
                                    <th>Tracking</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for shipment in order.shipments %}
                                    <tr>
                                        <td>
                                            {{ shipment.name }}
                                            <br>{{ shipment.street }}
                                            <br>{{ shipment.city }}, {{ shipment.region }} {{ shipment.postcode }}
                                            <br>{{ shipment.countryid }}
                                        </td>
                                        <td>{{ shipment.company }} {{ shipment.method }} {{ decorate(shipment.price) }}</td>
                                        <td>{{ shipment.tracking }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Cart Items</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Sku</th>
                                <th>Price</th>
                                <th>Qty</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in order.items %}
                                <tr>
                                    <td>{{ item.name }}</td>
                                    <td>{{ item.sku }}</td>
                                    <td>{{ decorate(item.price) }}</td>
                                    <td>{{ item.qty }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Billing Address</h3>
                    </div>
                    <div class="panel-body">
                        <div>{{ order.billingname }}</div>
                        <div>{{ order.billingstreet }}</div>
                        <div>{{ order.billingcity }}, {{ order.billingregion }} {{ order.billingpostcode }}</div>
                        <div>{{ order.billingcountryid }}</div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
{% endblock %}
