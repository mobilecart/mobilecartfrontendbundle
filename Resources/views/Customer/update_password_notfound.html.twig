{% extends frontend() %}
{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Invalid Request</h1>
                <div class="account-wall">

                    <img class="profile-img" src="{{ asset(frontendAsset('images/user-icon.svg')) }}" alt="">

                    <p class="text-center">Did you already update your password ?<br>This request is not valid.</p>
                </div>
                <a href="{{ path('customer_forgot_password') }}" class="text-center new-account">Forgot Password</a>
                <a href="{{ path('login_route') }}" class="text-center new-account">Login</a>
            </div>
        </div>
    </div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset(frontendAsset('css/login.css')) }}" rel="stylesheet" type="text/css" />
{% endblock %}
