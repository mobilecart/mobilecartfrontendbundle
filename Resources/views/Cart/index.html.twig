{% block content %}

<div class="container">
    <div class="row">
        <div class="col-xs-12 form-group">
            <h1>Shopping Cart</h1>
            <form action="{{ path('cart_update_qtys') }}" method="post">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Sku</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>&nbsp;</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if cartItems()|length > 0 %}
                        {% for item in cartItems() %}
                        <tr>
                            <td>
                                {% if item.parent_options|length > 0 %}
                                <a href="{{ path('cart_product_view', { 'slug': item.parent_options.slug }) }}">{{ item.name }}</a>
                                {% else %}
                                <a href="{{ path('cart_product_view', { 'slug': item.slug }) }}">{{ item.name }}</a>
                                {% endif %}
                            </td>
                            <td>{{ item.sku }}</td>
                            <td>{{ decorate(item.price) }}</td>
                            <td><input class="form-control" type="number" name="qty[{{ item.product_id }}]" value="{{ item.qty }}" /></td>
                            <td class="text-center">
                                <a class="btn btn-default" rel="nofollow" href="{{ path('cart_remove_item', { 'product_id': item.product_id }) }}">
                                    <i class="glyphicon glyphicon-remove"> </i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" class="text-right">
                                <input type="submit" class="btn btn-primary" value="Update" name="update" />
                            </td>
                        </tr>
                    </tfoot>
                    {% else %}
                    <tbody>
                        <tr>
                            <td colspan="5" align="center">Your Cart is Empty. <a href="{{ path('cart_products') }}">Click here to see Products</a></td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </form>
        </div>
    </div>

    {% if cartItems()|length > 0 %}
    <div class="row">
        <div class="col-sm-6">

        {% if is_discount_enabled %}
            <div>
                <form role="form" method="post" action="{{ path('cart_add_discount') }}">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th colspan="2">Promo Code</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input type="text" name="code" class="form-control" />
                                </td>
                                <td class="text-center">
                                    <input type="submit" class="btn btn-primary" value="Submit" name="update_discount" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            </div>
        {% endif %}

        {% if is_shipping_enabled and cartShippingMethods() | length > 0 %}
            <div>
                <form role="form" method="post" action="{{ path('cart_shipment_add') }}">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th colspan="2">Shipping Methods</th>
                            </tr>
                        </thead>
                        <tbody>
                    {% for method in cartShippingMethods() %}
                        <tr>
                            <td class="text-center">
                                <input type="radio" name="shipping_method" value="{{ method.code }}" {% if cartHasShipmentMethodCode(method.code) %}checked="checked"{% endif %} />
                            </td>
                            <td>{{ method.company }} {{ method.method }}  ${{ method.price }}</td>
                        </tr>
                    {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2" class="text-right">
                                    <input type="submit" class="btn btn-primary" value="Update" name="update_shipping" />
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </form>
            </div>

        {% endif %}
        </div>
        <div class="col-sm-6">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th colspan="2">Totals</th>
                    </tr>
                </thead>
                <tbody>
                {% for total in cartTotals() %}
                    <tr>
                        <th>{{ total.label }}</th>
                        <th>{{ decorate(total.value) }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="text-right">
                <a class="btn btn-success btn-lg" href="{{ path('cart_checkout') }}">Proceed to Checkout</a>
            </div>
        </div>
    </div>
    {% endif %}

    {#<div class="row">
