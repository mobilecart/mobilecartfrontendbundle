{% extends templatePath('Customer:dashboard.html.twig', 'frontend') %}
{% block main_content %}
<div class="col-sm-9">

    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">{% block header_text %}Addresses{% endblock %}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 header-buttons">
            <a href="{{ path('customer_profile') }}" class="btn btn-default">Back</a>
            <a href="{{ path('customer_address_new') }}" class="btn btn-success">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>&nbsp;</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>City</th>
                    <th>Region</th>
                    <th>Country</th>
                    <th>&nbsp;</th>
                </tr>
                {% if result.entities|length > 0 %}
                    {% for entity in result.entities %}
                    <tr>
                        <td>
                            <a href="{{ path('customer_address_edit', {'id': entity.id}) }}">Edit</a>
                        </td>
                        <td>{{ entity.firstname }}</td>
                        <td>{{ entity.lastname }}</td>
                        <td>{{ entity.city }}</td>
                        <td>{{ entity.region }}</td>
                        <td>{{ entity.country_id }}</td>
                        <td class="text-center">
                            <a class="btn btn-default" rel="nofollow" href="{{ path('customer_address_delete', { 'id': entity.id }) }}">
                                <i class="glyphicon glyphicon-remove"> </i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No Addtl. Addresses Have Been Saved</td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
