
<div class="container totals-discounts-container">
    <div class="row">
        <div class="col-sm-12 form-group">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Sku</th>
                        <th>Price</th>
                        <th>Qty</th>
                        {% if is_shipping_enabled and is_multi_shipping_enabled %}
                        <th>Address</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                {% for cart_item in cart.items %}
                    <tr>
                        <td>{{ cart_item.name }}</td>
                        <td>{{ cart_item.sku }}</td>
                        <td>{{ decorate(cart_item.price) }}</td>
                        <td><input class="form-control qty-input" type="number" name="qty[{{ cart_item.product_id }}]" value="{{ cart_item.qty }}" /></td>
                        {% if is_shipping_enabled and is_multi_shipping_enabled and customerAddresses()|length > 1 %}
                            <td>
                                <select name="product_address[{{ cart_item.product_id }}]" class="form-control product-shipping">
                                    {% for address in customerAddresses() %}
                                        <option value="{{ address.id }}"{% if cart_item.get('customer_address_id') == address.id %} selected="selected"{% endif %}>{{ address.label }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">

        {% if is_shipping_enabled %}

            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th colspan="2">Shipping Methods</th>
                </tr>
                </thead>
                <tbody>

            {% if is_multi_shipping_enabled %}

                {% for src_address_key, address_ids in cartShippingMethods('') %}
                    {% for address_id, methods in address_ids %}
                        {% if methods|length > 0 %}
                            <tr>
                                <td>{{ addressLabel(address_id) }}</td>
                                <td class="text-center">
                                    <select name="shipping_methods[{{ src_address_key }}][{{ address_id }}]" class="form-control multi-shipping">
                                        {% for method in methods %}
                                            <option value="{{ method.code }}"{% if cartHasShipmentMethodCode(method.code, address_id, src_address_key) %} selected="selected"{% endif %}>{{ method.company }} {{ method.method }}  {{ decorate(method.price) }}</option>
                                        {% endfor %}
                                    </select>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                {% endfor %}

            {% else %}

                    <tr>
                        <td>Main Shipping Address</td>
                        <td class="text-center">
                            <select name="shipping_method" class="form-control">
                                {% for method in cartShippingMethods() %}
                                    <option value="{{ method.code }}"{% if cartHasShipmentMethodCode(method.code) %} selected="selected"{% endif %}>{{ method.company }} {{ method.method }}  {{ decorate(method.price) }}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>

            {% endif %}

                </tbody>

            </table>

        {% endif %}

            <div>
                <label>Promo Code</label>
                <input name="discount_code[]" class="form-control" value="" />
            </div>
            <div class="text-right">
                <button class="btn btn-default">Update</button>
            </div>
        </div>
        <div class="col-sm-6 totals-container">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th colspan="2">Totals <i class="spinner fa fa-spinner fa-spin fa-fw margin-bottom" style="display:none;"></i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                {% for total in cart.totals %}
                    <tr>
                        <th>{{ total.label }}</th>
                        <th>{{ decorate(total.value) }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
