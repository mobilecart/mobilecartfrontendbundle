
<div class="container totals-discounts-container">
    <div class="row">
        <div class="col-sm-12 form-group">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Sku</th>
                        <th>Price</th>
                        <th>Qty</th>
                    </tr>
                </thead>
                <tbody>
                {% for cart_item in cart.items %}
                    <tr>
                        <td>{{ cart_item.name }}</td>
                        <td>{{ cart_item.sku }}</td>
                        <td>{{ decorate(cart_item.price) }}</td>
                        <td><input class="form-control qty-input" type="number" name="qty[{{ cart_item.product_id }}]" value="{{ cart_item.qty }}" /></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">

        {% if is_shipping_enabled and cartShippingMethods() | length > 0 %}
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th colspan="2">Shipping Methods</th>
                    </tr>
                </thead>
                <tbody>
                {% for method in cartShippingMethods() %}
                    <tr>
                        <td class="text-center">
                            <input type="radio" name="shipping_method" value="{{ method.code }}" {% if cartHasShipmentMethodCode(method.code) %}checked="checked"{% endif %} />
                        </td>
                        <td>{{ method.company }} {{ method.method }}  {{ decorate(method.price) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}

            <div>
                <label>Promo Code</label>
                <input name="discount_code[]" class="form-control" value="" />
            </div>
            <div class="text-right">
                <button class="btn btn-default">Update</button>
            </div>
        </div>
        <div class="col-sm-6 totals-container">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th colspan="2">Totals <i class="spinner fa fa-spinner fa-spin fa-fw margin-bottom" style="display:none;"></i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                {% for total in cart.totals %}
                    <tr>
                        <th>{{ total.label }}</th>
                        <th>{{ decorate(total.value) }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
