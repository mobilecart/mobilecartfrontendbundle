
<div class="container">
    <div class="row">
        <div class="col-sm-12 form-group">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Sku</th>
                        <th>Price</th>
                        <th>Qty</th>
                    </tr>
                </thead>
                <tbody>
                {% for cart_item in cart.items %}
                    <tr>
                        <td>{{ cart_item.name }}</td>
                        <td>{{ cart_item.sku }}</td>
                        <td>{{ decorate(cart_item.price) }}</td>
                        <td>{{ cart_item.qty }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">

        {% if is_shipping_enabled and cartShipment() %}
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Shipping Method</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ cartShipment().company }} {{ cartShipment().method }}  {{ decorate(cartShipment().price) }}</td>
                    </tr>
                </tbody>
            </table>
        {% endif %}
        </div>
        <div class="col-sm-6">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th colspan="2">Totals</th>
                    </tr>
                </thead>
                <tbody>
                {% for total in cart.totals %}
                    <tr>
                        <th>{{ total.label }}</th>
                        <th>{{ decorate(total.value) }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
